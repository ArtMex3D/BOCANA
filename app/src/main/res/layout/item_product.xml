<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:strokeColor="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1e293b"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="ALBARAN" />

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    tools:text="Congelador 04" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/textViewLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748b"
                    android:textSize="11sp"
                    tools:text="Ãšlt. act: 03/08/25" />

                <TextView
                    android:id="@+id/textViewMinStockValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748b"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="100.00 Bolsas" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_sunken"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp" />

        <LinearLayout
            android:id="@+id/stock_row_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <LinearLayout
                android:id="@+id/location_stock_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_action_button"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLocationStockLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#64748b"
                    android:textSize="12sp"
                    tools:text="Stock Matriz:"/>

                <TextView
                    android:id="@+id/textViewLocationStockValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7c3aed"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="690.00" />
            </LinearLayout>

            <View android:layout_width="12dp" android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_stock_item"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock Total:"
                    android:textColor="#64748b"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewStockTotalValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#159c10"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="1000.00" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_sunken"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center">

            <Button
                android:id="@+id/buttonAddCompra"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Compra"
                android:textColor="#319200"
                android:textSize="8sp"
                app:icon="@drawable/cart"
                app:iconTint="#319200"
                app:iconGravity="textTop"/>

            <Button
                android:id="@+id/buttonAddSalida"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salida"
                android:textColor="#A80000"
                android:textSize="8sp"
                app:icon="@drawable/ic_sign_out"
                app:iconTint="#A80000"
                app:iconGravity="textTop"/>

            <Button
                android:id="@+id/buttonAddTraspaso"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Traspaso"
                android:textColor="#001CA2"
                android:textSize="8sp"
                app:icon="@drawable/ic_exchange"
                app:iconTint="#001CA2"
                app:iconGravity="textTop"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutActionButtonsC04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="gone"
            android:gravity="center">

            <Button
                android:id="@+id/buttonEditC04"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ajustar"
                android:textColor="#7c3aed"
                android:textSize="8sp"
                app:icon="@drawable/editar"
                app:iconTint="#7c3aed"
                app:iconGravity="textTop"/>

            <Button
                android:id="@+id/buttonTraspasoC04M"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Traspaso"
                android:textColor="#64748b"
                android:textSize="8sp"
                app:icon="@drawable/traspaso"
                app:iconTint="#64748b"
                app:iconGravity="textTop"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>