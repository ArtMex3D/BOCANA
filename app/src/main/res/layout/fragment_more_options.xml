<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.masopciones.MoreOptionsFragment">

    <!-- BOTÓN NUEVO AÑADIDO -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_advanced_history"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Búsqueda Avanzada"
        app:icon="@android:drawable/ic_menu_search"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNavToAjustes"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/pending_item_background"
        android:text="Ajuste Manual de Lote"
        app:icon="@drawable/ic_settings" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNavToReportGenerator"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Generar Reporte PDF"
        app:icon="@drawable/pdf"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNavToArchivedProducts"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/pending_item_background"
        android:text="Productos Archivados"
        app:icon="@drawable/guardar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNavToPrintLabelsFeature"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Imprimir Etiquetas"
        app:icon="@drawable/imprimir"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_history"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pending_item_background"
        android:text="Historial de Movimientos"
        app:icon="@drawable/historial"/>




</LinearLayout>