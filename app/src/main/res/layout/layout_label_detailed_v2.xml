<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/label_border"
    android:padding="8dp">

    <!-- Nombre del Producto -->
    <TextView
        android:id="@+id/label_product_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline_h1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="PRODUCTO CON UN NOMBRE MUY LARGO" />

    <!-- Separador Superior (delgado y discreto) -->
    <View
        android:id="@+id/separator_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_h1" />

    <!-- Etiqueta "Fecha:" -->
    <TextView
        android:id="@+id/label_date_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Fecha:"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline_h3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_h2" />

    <!-- Valor de la Fecha -->
    <TextView
        android:id="@+id/label_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="end|center_vertical"
        android:textColor="#333333"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/label_date_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_date_title"
        app:layout_constraintTop_toTopOf="@id/label_date_title"
        tools:text="08/02/2025" />

    <!-- Etiqueta "Proveedor:" -->
    <TextView
        android:id="@+id/label_supplier_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Proveedor:"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline_h4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_h3" />

    <!-- Valor del Proveedor -->
    <TextView
        android:id="@+id/label_supplier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="end|center_vertical"
        android:textColor="#333333"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/label_supplier_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_supplier_title"
        app:layout_constraintTop_toTopOf="@id/label_supplier_title"
        tools:text="Maximar" />

    <!-- Etiqueta "Detalle:" -->
    <TextView
        android:id="@+id/label_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Detalle:"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/guideline_h5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_h4" />

    <!-- Valor del Detalle -->
    <TextView
        android:id="@+id/label_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:gravity="end|center_vertical"
        android:textColor="#333333"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="7sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/label_detail_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/label_detail_title"
        app:layout_constraintTop_toTopOf="@id/label_detail_title"
        tools:text="Texto editable" />

    <!-- Separador Inferior -->
    <View
        android:id="@+id/separator_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_h5" />

    <!-- Contenedor de Peso (ocupa toda la sección inferior) -->
    <FrameLayout
        android:id="@+id/weight_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_bottom">

        <!-- Peso Predefinido (grande y centrado) -->
        <TextView
            android:id="@+id/label_weight_predefined"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="38sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeTextType="uniform"
            tools:text="50 KG" />

        <!-- Peso Manual (alineado a los extremos) -->
        <RelativeLayout
            android:id="@+id/layout_weight_manual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <TextView
                android:id="@+id/label_weight_manual_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Peso:"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/label_weight_manual_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Unidad" />
        </RelativeLayout>
    </FrameLayout>

    <!-- Guías para distribuir el espacio verticalmente -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.59" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

</androidx.constraintlayout.widget.ConstraintLayout>